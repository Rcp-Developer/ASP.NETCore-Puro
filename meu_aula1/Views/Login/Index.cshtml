@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutSimples.cshtml";
}

@section estilos {
    <link href="~/css/Login/Index.css" rel="stylesheet" />
}

@section scripts {
    <script src="~/js/Login/Index.js"></script>
}

<h2>Login</h2>
<form method="post" action="~/Login/Logar">
    <div class="imgcontainer">
        <img src="~/img/avatar.png" alt="Avatar" class="avatar" />
    </div>
    <div class="container">
        <label for="email"><b>E-Mail</b></label>
        <input type="text" placeholder="E-Mail" name="email" required />
        <label for="senha"><b>Senha</b></label>
        <input type="password" placeholder="Sua senha" name="senha" required />
        <div class="imgcontainer">
            <button onclick="index.logar()">Logar</button>
        </div>
        <div class="container">
            @ViewBag.msgErro
        </div>
        <label>
            <input type="checkbox" name="manter_logado" /> Manter-me logado
        </label>
    </div>
    <div class="container">
        <span class="psw"><a href="#">Esqueceu sua senha?</a></span>
    </div>
</form>




